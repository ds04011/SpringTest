<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.ds04011.SpringTest.bookmark.repository.BookmarkRepository">
 	<insert id="InsertBookmark"
 	parameterType="com.ds04011.SpringTest.bookmark.domain.Bookmark">
 		INSERT INTO `bookmark`
 		(
 			`name`
 			, `url`
 		)
 		VALUE
 		(
 			#{name}
 			, #{url}
 		)
 	
 	</insert>
 
 	<select id="selectAllBookmark"
 	resultType="com.ds04011.SpringTest.bookmark.domain.Bookmark">
 		SELECT 
 			`id`
 			, `name`
 			, `url`
 			, `createdAt`
 			, `updatedAt`
 		FROM
 			`bookmark`
 			
 	
 	</select>
 	
 	<select id="selectCountByUrl"
 	parameterType="String"
 	resultType="int">
 		Select count(*) FROM 
 			`bookmark`
 		WHERE
 			`url` = #{url}
 	
 	</select>
 	
 	
 	<delete id="deleteBookmark"
 	parameterType="int">
 		DELETE FROM 
 			`bookmark`
 		WHERE 
 			`id` = #{id} 
 	
 	</delete>
 </mapper>